+        { 0, BASE_BAUD, 0x2E8, 6, STD_COM_FLAGS },      /* ttyS3 */     \
+        { 0, BASE_BAUD, 0x2E0, 7, STD_COM_FLAGS },      /* ttyS4 */     \
+        { 0, BASE_BAUD, 0x2F0, 11, STD_COM_FLAGS },     /* ttyS5 */
